{% extends 'dashboard/blank.html.twig' %}
{% block body %}
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Clients</h1>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Liste des r√©servation</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>id</th>
                        <th>chambre_id</th>
                        <th>date_debut</th>
                        <th>date_fin</th>
                        <th>prix</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>id</th>
                        <th>chambre_id</th>
                        <th>date_debut</th>
                        <th>date_fin</th>
                        <th>prix</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for c in Listereserv %}
                        <tr>
                            <td>{{ c.id }}</td>
                            <td>{{ c.chambre.id }}</td>
                            <td>{{ c.dateDebut |date }}</td>
                            <td>{{ c.dateFin | date }}</td>
                            <td>{{ c.prix }}</td>
                            <td>{{ c.etat }}</td>
                            {% if is_granted('ROLE_ADMIN') %}
                            <td class="text-right">
                                <form action="/dash/Approuver/{{ c.id }}" method="post">

                                    <button type="submit" class="btn btn-facebook">Approuver</button>
                                </form>
                            </td>
                            {% endif %}
                        </tr>
                    {% endfor%}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}